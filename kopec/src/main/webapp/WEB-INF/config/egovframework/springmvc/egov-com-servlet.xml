      <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**/*.do"/>

            <bean class="ncsys.com.util.CoolInterceptor"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/**/*.json"/>

            <bean class="ncsys.com.util.CoolInterceptorJson"/>
        </mvc:interceptor>
	</mvc:interceptors>




	<!-- for JFile -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0"/>

    <!-- json view -->
    <bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView" id="jsonView">
	    <property name="contentType" value="application/json;charset=UTF-8"></property>
	</bean>

	<!-- egov  -->
	<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" p:order="3"
		p:prefix="/WEB-INF/jsp/" p:suffix=".jsp" p:viewClass="org.springframework.web.servlet.view.JstlView"/>

    <!-- tiles 설정 -->
    <bean id="tilesViewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver" p:order="2"
          p:viewClass="org.springframework.web.servlet.view.tiles3.TilesView"/>
    <!--Don't add suffix or prefix like you do with .jsp files-->

    <bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
        <property name="definitions">
            <value>/WEB-INF/config/tiles/tiles.xml</value>
        </property>
    </bean>






</beans>